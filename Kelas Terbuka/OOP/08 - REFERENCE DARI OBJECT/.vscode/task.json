{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "./bin",
                "./src/com/tutorial/Main.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$javac"
            ]
        },
        {
            "label": "run Java",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "./bin",
                "com.tutorial.Main"
            ],
            "dependsOn": "compile Java",
            "group": "build"
        }
    ]
}
