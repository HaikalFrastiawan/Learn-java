{
    "version": "2.0.0",
    "tasks": [
       
        {
            "label": "Compile Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "./bin",
                "./src/com/tutorial/*.java" 
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$javac" 
        },
        

        {
            "label": "Run Java Program",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "./bin",
                "com.tutorial.Main" 
            ],
            "dependsOn": "Compile Java", 
            
            "group": {
                "kind": "build",
                "isDefault": true
            },
            
            "presentation": {
                "reveal": "always",
                "panel": "new" 
            },
            "problemMatcher": []
        }
    ]
}